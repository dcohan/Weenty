@model IEnumerable<Cuponera.Entities.product>

@{
    ViewBag.Title = "Productos";
}

<script type="text/javascript">
    var globals = {
        controller: 'product',
        min_filters_size: 400,
        filters: {
            include: ['all'],
            custom: [{
                controlType: 'text',
                controlId: 'title',
                controlDefaultValue: '@(Request.Params["title"] != null ? @Request.Params["title"] : "")',
                label: 'Titulo'
            },{
                controlType: 'select',
                controlId: 'category',
                controlDefaultValue: '@(Request.Params["category"] != null ? @Request.Params["category"] : "")',
                label: 'Categoría',
                source: {
                    include_all: true,
                    controller: 'category',
                    action: 'GetAllBasicData'
                }
            }]
        }
    };


    $(document).ready(function () {
        $('#category').width(10);
        $('#item-name').width(10);
    });
    
</script>

<h2>Productos</h2>

<div class="list-content">
    @Html.Partial("AntiForgeryTokenForm")
    @Html.Partial("Filters")



    @if (Model.Count() == 0)
    {
        <div class="no-data">No hay datos.</div>
    }
    else
    {
        <div class="table-all">
            <table class="table">
                <tr>
                    <th>
                        Titulo
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        $
                    </th>
                    <th>
                        Estado
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr data-item-id="@item.IdProduct">
                        <td>
                            <span class="item-name">@Html.DisplayFor(modelItem => item.Title)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.category.Name)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.Price)</span>
                        </td>
                        <td>
                            @if (item.Active)
                            {
                                <img src="Images/tick.ico" alt="active" class="active" style="" />
                            }
                            else
                            {
                                <img src="Images/x.ico" alt="inactive" class="inactive" />
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdProduct }, new { @class = "editIcon" })
                        </td>
                        <td>
                            @Html.ActionLink("Detalle", "Details", new { id = item.IdProduct }, new { @class = "detailsIcon" })
                        </td>
                        <td>
                            @if (item.DeletionDatetime == null)
                            {
                                <a href="#" class="removeIcon" data-popup-to-open="dialog-confirm-deactivate">Eliminar</a>
                            }
                            else
                            {
                                <a href="#" class="addIcon" data-popup-to-open="dialog-confirm-activate">Activar</a>
                            }
                        <td>
                            @Html.ActionLink("Oferta", "Create", "offer", new { IdProduct = item.IdProduct }, new { @class = "offerIcon" })

                        </td>
                        
                    </tr>
                }

            </table>
            @Html.Partial("Paginator")
        </div>

        <div style="clear:both;"></div>
    }

    <p>
        @Html.ActionLink("Nuevo", "Create")
    </p>
</div>