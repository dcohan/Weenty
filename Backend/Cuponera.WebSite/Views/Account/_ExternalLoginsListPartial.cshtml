@model ICollection<AuthenticationClientData>

@if (Model.Count == 0)
{
   
}
else
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()
    <fieldset id="socialLoginList">
        <legend>Loguearse usando otro servicio</legend>
        <p>
        @foreach (AuthenticationClientData p in Model)
        {
            <button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title="Loguearse usando su cuenta de @p.DisplayName">@p.DisplayName</button>
        }
        </p>
    </fieldset>
    }
}
