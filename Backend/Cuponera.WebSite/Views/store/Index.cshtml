@model IEnumerable<Cuponera.Entities.store>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    var globals = {
        controller: 'category',
        filters: {
            include: ['all'],
            custom: [{
                controlType: 'text',
                controlId: 'name',
                controlDefaultValue: '@(Request.Params["name"] != null ? @Request.Params["name"] : "")',
                label: 'Nombre'
            }, {
                controlType: 'select',
                controlId: 'company',
                controlDefaultValue: '@(Request.Params["company"] != null ? @Request.Params["company"] : "")',
                label: 'Empresa',
                source: {
                    include_all: true,
                    controller: 'company',
                    action: 'GetAllBasicData'
                }
            }]
        }
    };
</script>


<h2>Sucursales</h2>

<div class="list-content">
    @Html.Partial("AntiForgeryTokenForm")
    @Html.Partial("Filters")

    @if (Model.Count() == 0)
    {
    <div class="no-data">No hay datos.</div>
    }
    else
    {
        <div class="table-all">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.company.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.state.Name)
                        </th>
                        <th>
                            Estado
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-item-id="@item.IdStore">
                            <td>
                                <span class="item-name">@Html.DisplayFor(modelItem => item.company.Name)</span>
                            </td>
                            <td>
                                <span class="item-name">@Html.DisplayFor(modelItem => item.Name)</span>
                            </td>
                            <td>
                                <span class="item-name">@Html.DisplayFor(modelItem => item.state.Name)</span>
                            </td>
                            <td class="current-status">
                                @if (item.DeletionDatetime == null)
                                {
                                    <img src="Images/tick.ico" alt="active" title="active" class="active" />
                                }
                                else
                                {
                                    <img src="Images/x.ico" alt="inactive" title="inactive" class="inactive" />
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.IdStore }) |
                                @Html.ActionLink("Detalle", "Details", new { id = item.IdStore }) |

                                @if (item.DeletionDatetime == null)
                                {
                                    <a href="#" class="deactivate" data-popup-to-open="dialog-confirm-deactivate">Eliminar</a>
                                }
                                else
                                {
                                    <a href="#" class="activate" data-popup-to-open="dialog-confirm-activate">Activar</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("Paginator")
        </div>
    }

    <p>
        @Html.ActionLink("Nuevo", "Create")
    </p>
</div>