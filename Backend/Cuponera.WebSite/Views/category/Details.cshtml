@model Cuponera.Entities.category

@{
    ViewBag.Title = "Detalles";
}

<h2>Datalles @Html.DisplayFor(model => model.Name)</h2>

<div>
    <br />
    <div class="item-description">
        <b>Nombre:</b> @Html.DisplayFor(model => model.Name)
    </div>


    <div class="item-description">
        <b>Estado:</b>
        @if (Model.DeletionDatetime == null)
        {
            <img src="../../Images/tick.ico" alt="active" class="active" />

        }
        else
        {
            <img src="../../Images/x.ico" alt="inactive" class="inactive" />
        }
    </div>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdCategory }) |
    @Html.ActionLink("Volver", "Index")
</p>
