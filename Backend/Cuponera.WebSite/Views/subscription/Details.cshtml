@model Cuponera.Entities.subscription

@{
    ViewBag.Title = "Detalle " + Model.Name;
}

<h2>@Html.DisplayFor(model => model.Name)</h2>


<div>
    <div class="item-description">
        <b>@Html.DisplayNameFor(model => model.Name):</b> @Html.DisplayFor(model => model.Name)
    </div>

    <div class="item-description">
        <b>@Html.DisplayNameFor(model => model.Pricing):</b> $@Html.DisplayFor(model => model.Pricing)
    </div>
    
    <div class="item-description">
        <b>@Html.DisplayNameFor(model => model.SortFactor):</b> 
        <br />
        <ol class="ordered-subscriptions">       
        @foreach (var subscription in ViewBag.AllSubscriptions)
        {
                <li class="@(subscription.IdSubscription == Model.IdSubscription ? "current" : "")">@subscription.Name <img class="small-icon" src="@subscription.Icon" title="@subscription.Name" alt="@subscription.Name" /></li>
        }
        </ol>

    </div>

    <div class="item-description">
        <b>@Html.DisplayNameFor(model => model.Duration):</b> @Html.DisplayFor(model => model.Duration) días
    </div>

    <div class="item-description">
        <b>@Html.DisplayNameFor(model => model.Icon):</b> <img class="icon" src="@Model.Icon" title="@Model.Name" alt="@Model.Name" />
    </div>
    
    <div class="item-description">
        <b>Estado:</b>
        @if (Model.DeletionDatetime == null)
        {
            <img src="../../Images/tick.ico" alt="active" title="active" class="active" />

        }
        else
        {
            <img src="../../Images/x.ico" alt="inactive" title="inactive" class="inactive" />
        }
    </div>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdSubscription }) |
    @Html.ActionLink("Volver", "Index")
</p>
