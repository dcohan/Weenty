<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_corner_round_gray"
        android:padding="10dp"
        android:text="@string/today"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical|start" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="@dimen/width_weather"
                android:layout_height="@dimen/width_weather"
                android:background="@color/gray_strong"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/min"
                android:textColor="@color/white"
                android:textSize="@dimen/weather_values_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/min_temp"
                android:layout_width="@dimen/width_weather"
                android:layout_height="@dimen/width_weather"
                android:background="@color/light_blue"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/weather_values_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="@dimen/width_weather"
                android:layout_height="@dimen/width_weather"
                android:background="@color/gray_strong"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/max"
                android:textColor="@color/white"
                android:textSize="@dimen/weather_values_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/max_temp"
                android:layout_width="@dimen/width_weather"
                android:layout_height="@dimen/width_weather"
                android:background="@color/light_red"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/weather_values_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="@dimen/width_weather"
                android:layout_height="@dimen/width_weather"
                android:background="@color/gray_strong"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/humity"
                android:textColor="@color/white"
                android:textSize="@dimen/weather_values_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="@dimen/width_weather"
                android:layout_height="@dimen/width_weather"
                android:background="@color/light_light_blue"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/weather_values_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_corner_round_gray"
        android:padding="10dp"
        android:text="@string/next_days"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>